{
  "name": "action-ros-lint",
  "version": "0.1.1",
  "description": "GitHub Action to run ROS 2 linters on a ROS 2 package",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build src/*.ts -o dist",
    "lint": "eslint src/*.ts",
    "prettier": "prettier --write 'src/*.ts'",
    "test": "eslint src/*.ts && jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ros-tooling/action-ros-lint.git"
  },
  "keywords": [
    "actions",
    "ros",
    "lint"
  ],
  "author": "ROS 2 Tooling Working Group",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/ros-tooling/action-ros-lint/issues"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^15.3.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@zeit/ncc": "^0.22.3",
    "acorn": "^8.2.4",
    "eslint": "^6.8.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  }
}
